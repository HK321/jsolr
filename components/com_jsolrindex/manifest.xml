<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD component 1.0//EN" "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>JSolrIndex</name>
	<creationDate>2010-01-31</creationDate>
	<author>Wijiti</author>
	<authorEmail>development@wijiti.com</authorEmail>
	<authorUrl>http://www.wijiti.com</authorUrl>
	<copyright>>Copyright (C) 2010 Wijiti Pty Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>0.2.0</version>
	<description>The JSolrIndex component provides configuration and administration functionality for managing the Solr indexes and search.</description>

	<installfile>install.jsolrindex.php</installfile>
	<uninstallfile>uninstall.jsolrindex.php</uninstallfile>
	
    <install><sql></sql></install>
    <uninstall><sql></sql></uninstall>
	
	<files folder="site">	
		<filename>jsolrindex.php</filename>
	</files>

 	<languages folder="language/site">
 		<language tag="en-GB">en-GB.com_jsolrindex.ini</language>
 	</languages>	
	    
    <media destination="com_jsolrindex">
    	<filename>js/jsolrindex.js</filename>
    	<filename>css/jsolrindex.css</filename>
    </media>
    	
	<administration>
		<menu view="configuration">JSolr Index</menu>
		<submenu>
			<menu view="configuration">Configuration</menu>
			<menu view="attachments">Attachments</menu>
			<menu view="robots">Robots</menu>
		</submenu>

	    <files folder="admin">
	    	<folder>models</folder>
	    	<folder>views</folder>
	    	<folder>helpers</folder>	    	
	    	<filename>controller.php</filename>
	    	<filename>jsolrindex.php</filename>
	    	<filename>ignore.txt</filename>	    	
	    	<filename>configuration.php</filename>
	    	<filename>crawler.php</filename>
	    	<folder>extensions</folder>
	    	<folder>test.odt</folder>
	    </files>
	    
		<languages folder="language/admin">
			<language tag="en-GB">en-GB.com_jsolrindex.ini</language>
		</languages>
	</administration>
	
    <params>
    </params>	
</install>
<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="connection"
        label="COM_JSOLRINDEX_CONFIG_CONNECTION_LABEL"
        description="COM_JSOLRINDEX_CONFIG_CONNECTION_DESC">
        <field
            name="host"
            type="text"
            label="COM_JSOLRINDEX_CONNECTION_HOST_LABEL"
            size="45"/>
        <field
            name="port"
            type="text"
            label="COM_JSOLRINDEX_CONNECTION_PORT_LABEL"
            size="45"/>
        <field
            name="path"
            type="text"
            label="COM_JSOLRINDEX_CONNECTION_PATH_LABEL"
            size="45"/>
        <field
            name="username"
            type="text"
            label="COM_JSOLRINDEX_CONNECTION_USERNAME_LABEL"
            size="45"/>
        <field
            name="password"
            type="text"
            label="COM_JSOLRINDEX_CONNECTION_PASSWORD_LABEL"
            size="45"/>
    </fieldset>
    <fieldset
        name="attachments"
        label="COM_JSOLRINDEX_CONFIG_ATTACHMENTS_LABEL"
        description="COM_JSOLRINDEX_CONFIG_ATTACHMENTS_DESC">
        <field
            name="index"
            type="radio"
            default="0"
            label="COM_JSOLRINDEX_ATTACHMENTS_INDEX_LABEL"
            description="COM_JSOLRINDEX_ATTACHMENTS_INDEX_DESC"
            class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="content_types_allowed"
            type="text"
            label="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_ALLOWED_LABEL"
            description="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_ALLOWED_DESC"
            size="45"/>
        <field
            name="content_types_index_content"
            type="text"
            label="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_INDEX_CONTENT_LABEL"
            description="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_INDEX_CONTENT_DESC"
            size="45"/>
        <field
            name="extractor"
            type="list"
            label="COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_LABEL"
            description="COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_DESC"
            class="inputbox"
            default="local">
                <option value="TikaApp">COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_LOCAL</option>
                <option value="TikaServer">COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_TIKASERVER</option>
        </field>
        <field
            name="attachments_spacer1"
            type="spacer"
            hr="true"
            />
        <field
            name="app_path"
            type="text"
            label="COM_JSOLRINDEX_ATTACHMENTS_APPPATH_LABEL"
            description="COM_JSOLRINDEX_ATTACHMENTS_APPPATH_DESC"
            class="inputbox"/>
    </fieldset>
    <fieldset
        name="faceting"
        label="COM_JSOLRINDEX_CONFIG_FACETING_LABEL"
        description="COM_JSOLRINDEX_CONFIG_FACETING_DESC">
        <field
            name="casesensitivity"
            type="radio"
            label="COM_JSOLRINDEX_FACETING_CASESENSITIVITY_LABEL"
            description="COM_JSOLRINDEX_FACETING_CASESENSITIVITY_DESC"
            default="0"
            class="btn-group">
            <option value="0">COM_JSOLRINDEX_FACETING_CASESENSITIVITY_NONE</option>
            <option value="1">COM_JSOLRINDEX_FACETING_CASESENSITIVITY_LOWERCASE</option>
            <option value="2">COM_JSOLRINDEX_FACETING_CASESENSITIVITY_DUALCASE</option>
        </field>
    </fieldset>
    <fieldset
        name="advanced"
        label="COM_JSOLRINDEX_CONFIG_ADVANCED_LABEL"
        description="COM_JSOLRINDEX_CONFIG_ADVANCED_DESC">
        <field
            name="autocommit"
            type="radio"
            label="COM_JSOLRINDEX_ADVANCED_AUTOCOMMIT_LABEL"
            description="COM_JSOLRINDEX_ADVANCED_AUTOCOMMIT_DESC"
            default="0"
            class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="commitsWithin"
            type="text"
            label="COM_JSOLRINDEX_ADVANCED_COMMITSWITHIN_LABEL"
            description="COM_JSOLRINDEX_ADVANCED_COMMITSWITHIN_DESC"
            default="0"
            filter="integer"
            size="4"/>
        <field
            name="commitWithin"
            type="text"
            label="COM_JSOLRINDEX_ADVANCED_COMMITWITHIN_LABEL"
            description="COM_JSOLRINDEX_ADVANCED_COMMITWITHIN_DESC"
            default="0"
            filter="integer"
            size="4"/>
    </fieldset>
</config>
<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset 
		name="connection"
		label="COM_JSOLRINDEX_CONFIG_CONNECTION_LABEL"
		description="COM_JSOLRINDEX_CONFIG_CONNECTION_DESC">
		<field 
			name="host" 
			type="text" 
			label="COM_JSOLRINDEX_CONNECTION_HOST_LABEL" 
			size="45"/>
		<field 
			name="port" 
			type="text" 
			label="COM_JSOLRINDEX_CONNECTION_PORT_LABEL" 
			size="45"/>
		<field 
			name="path" 
			type="text" 
			label="COM_JSOLRINDEX_CONNECTION_PATH_LABEL" 
			size="45"/>
		<field 
			name="username" 
			type="text" 
			label="COM_JSOLRINDEX_CONNECTION_USERNAME_LABEL" 
			size="45"/>
		<field 
			name="password" 
			type="text" 
			label="COM_JSOLRINDEX_CONNECTION_PASSWORD_LABEL" 
			size="45"/>
	</fieldset>
	<fieldset 
		name="attachments"
		label="COM_JSOLRINDEX_CONFIG_ATTACHMENTS_LABEL"
		description="COM_JSOLRINDEX_CONFIG_ATTACHMENTS_DESC">
		<field
			name="index"
			type="radio"
			default="0"
			label="COM_JSOLRINDEX_ATTACHMENTS_INDEX_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_INDEX_DESC"
			class="btn-group">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="content_types_allowed" 
			type="text" 
			label="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_ALLOWED_LABEL" 
			description="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_ALLOWED_DESC"
			size="45"/>
		<field 
			name="content_types_index_content" 
			type="text" 
			label="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_INDEX_CONTENT_LABEL" 
			description="COM_JSOLRINDEX_ATTACHMENTS_FILETYPES_INDEX_CONTENT_DESC"
			size="45"/>
		<field
			name="extractor"
			type="list"
			label="COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_DESC"
			class="inputbox"
			default="local">
				<option value="local">COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_LOCAL</option>
				<option value="remote">COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_REMOTE</option>
				<option value="solr">COM_JSOLRINDEX_ATTACHMENTS_EXTRACTOR_SOLR</option>
		</field>
		<field
			name="attachments_spacer1"
			type="spacer"
			hr="true"
			/>
		<field
			name="local_tika_app_path"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_LOCALTIKA_APPPATH_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_LOCALTIKA_APPPATH_DESC"
			class="inputbox"/>
		<field
			name="attachments_spacer2"
			type="spacer"
			hr="true"
			/>
		<field
			name="remote_tika_host"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_HOST_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_HOST_DESC"
			class="inputbox"/>
		<field
			name="remote_tika_port"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PORT_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PORT_DESC"
			class="inputbox"/>
		<field
			name="remote_tika_username"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_USERNAME_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_USERNAME_DESC"
			class="inputbox"/>
		<field
			name="remote_tika_password"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PASSWORD_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PASSWORD_DESC"
			class="inputbox"/>
		<field
			name="remote_tika_path"
			type="text"
			label="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PATH_LABEL"
			description="COM_JSOLRINDEX_ATTACHMENTS_REMOTETIKA_PATH_DESC"
			class="inputbox"/>
	</fieldset>
	<fieldset 
		name="advanced"
		label="COM_JSOLRINDEX_CONFIG_ADVANCED_LABEL"
		description="COM_JSOLRINDEX_CONFIG_ADVANCED_DESC">
		<field 
			name="autocommit" 
			type="radio" 
			label="COM_JSOLRINDEX_ADVANCED_AUTOCOMMIT_LABEL"
			description="COM_JSOLRINDEX_ADVANCED_AUTOCOMMIT_DESC"
			default="0"
			class="btn-group">			
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="commitsWithin" 
			type="text" 
			label="COM_JSOLRINDEX_ADVANCED_COMMITSWITHIN_LABEL"
			description="COM_JSOLRINDEX_ADVANCED_COMMITSWITHIN_DESC"
			default="0" 
			filter="integer"
			size="4"/>
		<field 
			name="commitWithin" 
			type="text" 
			label="COM_JSOLRINDEX_ADVANCED_COMMITWITHIN_LABEL"
			description="COM_JSOLRINDEX_ADVANCED_COMMITWITHIN_DESC"
			default="0" 
			filter="integer"
			size="4"/>
	</fieldset>
</config>
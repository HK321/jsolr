<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="query"
        label="COM_JSOLRSEARCH_ADVANCED_SEARCH_TITLE"
        addfieldpath="/libraries/JSolr/Form/Fields/Legacy">

        <!-- eventually only our FacetFields fields should be used here -->
        <field
            name="aq"
            facet="title"
            type="text"
            label="COM_JSOLR_ADVANCED_SEARCH_AQ_LABEL"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
        <field
            name="eq"
            facet="title"
            type="text"
            label="COM_JSOLR_ADVANCED_SEARCH_EQ_LABEL"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
        <field
            name="oq"
            facet="title"
            type="text"
            label="COM_JSOLR_ADVANCED_SEARCH_OQ_LABEL"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
        <field
            name="nq"
            facet="title"
            type="text"
            label="COM_JSOLR_ADVANCED_SEARCH_NQ_LABEL"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
    </fieldset>

    <fields
        name="as"
        addfieldpath="/libraries/JSolr/Form/Fields/Legacy">
       <fieldset name="advanced">
           <field
               name="lr"
               type="language"
               label="Language"
               class="jsolr-dropdown"
               default="">
               <option value="">COM_JSOLRSEARCH_LANGAUGE_ANY</option>
           </field>
            <field
                name="qdr"
                type="list"
                label="Date"
                class="jsolr-dropdown">
               <option value="">COM_JSOLRSEARCH_CALENDAR_ANYTIME</option>
               <option value="h">COM_JSOLRSEARCH_CALENDAR_HOUR</option>
               <option value="d">COM_JSOLRSEARCH_CALENDAR_DAY</option>
               <option value="w">COM_JSOLRSEARCH_CALENDAR_WEEK</option>
               <option value="m">COM_JSOLRSEARCH_CALENDAR_MONTH</option>
               <option value="y">COM_JSOLRSEARCH_CALENDAR_YEAR</option>
            </field>
            <field
                name="in"
                type="list"
                label="Search"
                class="jsolr-dropdown">
               <option value="">Anywhere</option>
               <option value="title">Only in the title</option>
               <option value="body">Only in the body</option>
            </field>
        </fieldset>
    </fields>
</form>

<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="3.4" method="upgrade">
    <name>com_jsolr</name>
    <creationDate>2016-04-21</creationDate>
    <author>KnowledgeArc Ltd</author>
    <authorEmail>development@knowledgearc.com</authorEmail>
    <authorUrl>http://www.knowledgearc.org</authorUrl>
    <copyright>>Copyright (C) 2012-2016 KnowledgeArc Ltd. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html</license>
    <version>3.0.0-alpha</version>
    <description>COM_JSOLR_XML_DESCRIPTION</description>

    <scriptfile>script.php</scriptfile>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>


    <files folder="site">
        <folder>layouts</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>jsolr.php</filename>
        <filename>router.php</filename>
    </files>

     <languages folder="site">
         <language tag="en-GB">language/en-GB/en-GB.com_jsolr.ini</language>
     </languages>

    <media folder="media" destination="com_jsolr">
        <folder>js</folder>
        <folder>css</folder>
    </media>

    <administration>
        <files folder="admin">
            <folder>cli</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>views</folder>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>jsolr.php</filename>
        </files>

        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_jsolr.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_jsolr.sys.ini</language>
        </languages>

        <menu img="class:jsolr">COM_JSOLR</menu>
    </administration>
</extension>

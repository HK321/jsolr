<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="default">
        <!-- only JSolrFormFields should be used here -->
        <field 
            name="created_at"
            facet="created"
            type="JSolr.DateRange"
            label="Creation date"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
        <field 
            name="lang"
            facet="lang"
            type="JSolr.Lang"
            label="Language"
            multiple="true"
            class="inputbox jsolrquery"
            maxlength="50"/>
    </fieldset>
</form>

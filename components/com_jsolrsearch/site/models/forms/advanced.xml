<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset 
		name="metadata"
		label="COM_JSOLRSEARCH_ADVANCED_SEARCH_TITLE"
		addfieldpath="/administrator/components/com_jsolrsearch/models/fields">
		
		<field 
			name="aq"
			type="text"
			label="COM_JSOLRSEARCH_AQ_LABEL"
			size="40"
			class="inputbox jsolrquery"
			maxlength="50"/>
			
		<field 
			name="eq"
			type="text"
			label="COM_JSOLRSEARCH_EQ_LABEL"
			size="40"
			class="inputbox jsolrquery"
			maxlength="50"/>

		<field 
			name="oq"
			type="text"
			label="COM_JSOLRSEARCH_OQ_LABEL"
			size="40"
			class="inputbox jsolrquery"
			maxlength="50"/>
			
		<field 
			name="nq"
			type="text"
			label="COM_JSOLRSEARCH_NQ_LABEL"
			size="40"
			class="inputbox jsolrquery"
			maxlength="50"/>

		<field 
			name="lr" 
			type="language" 
			default=""
			client="site"
			label="COM_JSOLRSEARCH_LANGUAGE_LABEL" 
			description="COM_JSOLRSEARCH_ADVANCED_SEARCH_LANGUAGE_DESCRIPTION" />
		
		<field 
			name="qdr" 
			type="list" 
			default="" 
			label="COM_JSOLRSEARCH_DATERANGE_LABEL" 
			description="COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_DESCRIPTION">
			<option value="">COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_ANYTIME</option>
			<option value="d">COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_LASTDAY</option>
			<option value="w">COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_LASTWEEK</option>
			<option value="m">COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_LASTMONTH</option>
			<option value="y">COM_JSOLRSEARCH_ADVANCED_SEARCH_DATERANGE_LASTYEAR</option>
		</field>
	</fieldset>
</form>
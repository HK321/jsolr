<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.3" type="plugin" group="jsolrsearch" method="upgrade">
    <name>plg_jsolrsearch_archive</name>
    <creationDate>2012-08-21</creationDate>
    <author>KnowledgeArc Ltd</author>
    <authorEmail>development@knowledgearc.com</authorEmail>
    <authorUrl>http://www.knowledgearc.org</authorUrl>
    <copyright>>Copyright (C) 2012-2014 KnowledgeARC Ltd. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html</license>
    <version>1.0.0</version>
    <description>PLG_JSOLRSEARCH_ARCHIVE_XML_DESCRIPTION</description>
    <files>
        <filename plugin="archive">archive.php</filename>
        <folder>views</folder>
        <folder>forms</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_archive.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_archive.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="boosts"
                    type="textarea"
                    description="PLG_JSOLRSEARCH_ARCHIVE_BASIC_BOOSTS_DESC"
                    label="PLG_JSOLRSEARCH_ARCHIVE_BASIC_BOOSTS_LABEL"
                    cols="30"
                    rows="5"
                    filter="string"
                    default="dc.title_txt^100,dc.contributor.author_txt^75,title^25,author^25,dc.subject.other_txt^25,dc.description.provenance_txt^15,dc.identifier.uri_txt^15,dc.subject.nsi_txt^15"/>
                <field
                    name="query_boosts"
                    type="textarea"
                    description="PLG_JSOLRSEARCH_ARCHIVE_BASIC_QUERYBOOSTS_DESC"
                    label="PLG_JSOLRSEARCH_ARCHIVE_BASIC_QUERYBOOSTS_LABEL"
                    cols="30"
                    rows="5"
                    filter="string"
                    default=""/>
            </fieldset>
        </fields>
    </config>
</extension>
<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="facets">
        <field
            name="subject"
            facet="dc.subject.other_fc"
            filter="dc.subject.other_sm"
            type="jsolr.facets"
            label="By Subject"
            class="inputbox"
            count="true"
            exactmatch="true"/>
        <field
            name="accessioned"
            facet="dc.date.accessioned_tdtm"
            filter="dc.date.accessioned_tdtm"
            type="jsolr.datefacets"
            label="By Date"
            class="inputbox"
            count="true"/>
    </fieldset>

    <fieldset name="tools">
        <field
            name="sbd"
            type="jsolr.sort"
            class="inputbox jsolrquery">
            <option value="">PLG_JSOLRSEARCH_ARCHIVE_SORT_BY_RELEVANCE</option>
            <option value="1" field="dc.date.issued_s" direction="desc">PLG_JSOLRSEARCH_ARCHIVE_SORT_BY_DATE</option>
        </field>
    </fieldset>

    <fields name="as">
        <fieldset name="advanced">
            <field
                name="sbd"
                type="list"
                label="Date"
                class="jsolr-dropdown">
                <option value="">PLG_JSOLRSEARCH_ARCHIVE_SORT_BY_RELEVANCE</option>
                <option value="1">PLG_JSOLRSEARCH_ARCHIVE_SORT_BY_DATE</option>
            </field>
        </fieldset>
    </fields>
</form>

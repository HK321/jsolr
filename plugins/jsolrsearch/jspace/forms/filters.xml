<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="facets">
        <!-- only JSolrFormFields should be used here -->
		<field 
            name="subject"
            facet="dc.subject.other_fc"
            filter="dc.subject.other_sm"
            type="jsolr.facets"
            label="By Subject"
            class="inputbox"
            count="true"
            exactmatch="true"/>
    </fieldset>
    
    <fieldset name="tools">
        <!-- only JSolrFormFields should be used here -->
        <field 
            name="qdr"
            filter="modified"
            filter_quoted="false"
            type="jsolr.calendar"
            label="Date"
            size="40"
            class="jsolr-dropdown">
        	<option value="">LIB_JSOLR_CALENDAR_ANYTIME</option>
        	<option value="h" filter="[NOW-1HOUR TO NOW]">LIB_JSOLR_CALENDAR_HOUR</option>
        	<option value="d" filter="[NOW-1DAY TO NOW]">LIB_JSOLR_CALENDAR_DAY</option>
        	<option value="w" filter="[NOW-1WEEK TO NOW]">LIB_JSOLR_CALENDAR_WEEK</option>
        	<option value="m" filter="[NOW-1MONTH TO NOW]">LIB_JSOLR_CALENDAR_MONTH</option>
        	<option value="y" filter="[NOW-1YEAR TO NOW]">LIB_JSOLR_CALENDAR_YEAR</option>
		</field>
    </fieldset>
</form>
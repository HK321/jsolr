<?xml version="1.0" encoding="utf-8"?>
<form>    
    <fieldset 
        name="metadata"
        label="COM_JSOLRSEARCH_ADVANCED_SEARCH_TITLE"
        addfieldpath="/administrator/components/com_jsolrsearch/models/fields">
        
        <!-- only JSolrFormFields should be used here -->

        <field 
            name="created_at"
            facet="created"
            type="JSolr.DateRange"
            label="Creation date"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>

        <field 
            name="ids"
            facet="id"
            type="JSolr.NumberRange"
            label="IDS"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>

        <field 
            name="lang_checkboxes"
            facet="lang"
            type="JSolr.Checkboxes"
            label="Langs"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50">
            <option value="en-US">COM_JSOLR_LANG_EN_US</option>
            <option value="en-GB">COM_JSOLR_LANG_EN_GB</option>
            <option value="pl-PL">COM_JSOLR_LANG_PL</option>
        </field>
    </fieldset>
</form>
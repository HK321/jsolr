	<files>
		<filename plugin="newsfeeds">newsfeeds.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_newsfeeds.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_newsfeeds.sys.ini</language>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="boost_title" type="text" default="25.0" label="Title Boost" description="Boost the title field's relevancy."/>
				<field name="boost_body" type="text" default="15.0" label="Content Boost" description="Boost the content field's relevancy."/>
				<field name="boost_category" type="text" default="2.0" label="Category Boost" description="Boost the category's relevancy."/>
			</fieldset>
		</fields>
	</config>

	<version>1.1.0</version>
	<description>PLG_JSOLRSEARCH_DSPACE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dspace">dspace.php</filename>
		<folder>views</folder>
		<folder>forms</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_dspace.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_dspace.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">		
				<field name="boost_title" type="text" default="25.0" label="Title Boost" description="Boost the title field's relevancy."/>
				<field name="boost_body" type="text" default="15.0" label="Body Boost" description="Boost the body field's relevancy."/>
				<field name="boost_author" type="text" default="2.0" label="Author Boost" description="Boost the author field's relevancy."/>
				<field name="boost_bitstream_title" type="text" default="1.0" label="Bitstream Title Boost" description="Boost the bitstream title field's relevancy."/>
				<field name="boost_bitstream_body" type="text" default="1.0" label="Bitstream Body Boost" description="Boost the bitstream body field's relevancy."/>
			</fieldset>
		</fields>
	</config>
</extension>
<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="jsolrsearch" method="upgrade">
	<name>plg_jsolrsearch_dspace</name>
	<creationDate>2012-08-21</creationDate>
	<author>KnowledgeARC</author>
	<authorEmail>development@knowledgearc.com</authorEmail>
	<authorUrl>http://www.knowledgearc.org</authorUrl>
	<copyright>>Copyright (C) 2012-2014 KnowledgeARC Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>1.0.0</version>
	<description>PLG_JSOLRSEARCH_DSPACE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dspace">dspace.php</filename>
		<folder>views</folder>
		<folder>forms</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_dspace.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrsearch_dspace.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="boosts"
					type="textarea"
					description="PLG_JSOLRSEARCH_DSPACE_BASIC_BOOSTS_DESC"
					label="PLG_JSOLRSEARCH_DSPACE_BASIC_BOOSTS_LABEL"
					cols="30"
					rows="5"
					filter="string"
                    default="dc.title_*^100,dc.contributor.author_*^75,title_*^25,author_*^25,text_*^15"/>
                <field
                    name="query_boosts"
                    type="textarea"
                    description="PLG_JSOLRSEARCH_DSPACE_BASIC_QUERYBOOSTS_DESC"
                    label="PLG_JSOLRSEARCH_DSPACE_BASIC_QUERYBOOSTS_LABEL"
                    cols="30"
                    rows="5"
                    filter="string"
                    default=""/>
			</fieldset>
		</fields>
	</config>
</extension>
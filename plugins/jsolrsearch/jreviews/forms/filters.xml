<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="facets"
        addfieldpath="/plugins/jsolrsearch/jreviews/fields">
        
        <!-- only JSolrFormFields should be used here -->
        <field 
            name="reluctant"
            facet="jrreluctantreader_fc"
            filter="jrreluctantreader_sm"
            type="jsolr.toggle"
            label=""
            class="inputbox jsolrquery"
            value="Good for Reluctant Readers"/>

        <field 
            name="partofseries"
            facet="jrpartofseries_fc"
            filter="jrpartofseries_sm"
            type="jsolr.toggle"
            label=""
            class="inputbox jsolrquery"
            value="Part of a Series"/>

        <field 
            name="cat"
            facet="category_fc"
            filter="category_en"
            type="jsolr.facets"
            label="Category"
            class="inputbox jsolrquery"
            count="true"/>

        <field 
            name="readinglevel"
            facet="jrreadinglevel_fc"
            filter="jrreadinglevel_sm"           
            type="jsolr.listings"
            label="Reading level"
            class="inputbox jsolrquery"/>

        <field 
            name="fiction"
            facet="jrjrfiction_fc"
            filter="jrjrfiction_sm"
            type="jsolr.facets"
            label="Fiction/Non-Fiction"
            class="inputbox jsolrquery"/>

        <field 
            name="keywords"
            facet="jrkeywords_fc"
            filter="jrkeywords_sm"
            type="jsolr.listings"
            label="Keywords"
            class="inputbox jsolrquery"/>

        <field 
            name="country"
            filter="jrcountry_sm"
            facet="jrcountry_fc"
            type="jsolr.facets"
            label="Country"
            class="inputbox jsolrquery"/>
    </fieldset>
    
</form>
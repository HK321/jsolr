<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
        name="meta"
        addfieldpath="/plugins/jsolrsearch/jreviews/forms/fields">
        
        <!-- only JSolrFormFields should be used here -->
        <field 
            name="category"
            facet="category_en"
            type="JSolr.Category"
            label="Category"
            multiple="true"
            class="inputbox jsolrquery"
            size="8"
            parentCategory="9"
            maxlength="50"/>

        <field 
            name="jrreadinglevel"
            facet="jrreadinglevel_s_multi"
            type="JReviews.Readinglevel"
            label="Reading level"
            class="inputbox jsolrquery"
            size="8"
            maxlength="50" />

        <field 
            name="jrjrfiction"
            facet="jrjrfiction_s_multi"
            type="JSolr.Radio"
            label="Fiction/Non-Fiction "
            class="inputbox jsolrquery"
            maxlength="50">
            <option value="Fiction">Fiction</option>
            <option value="Non-Fiction">Non-Fiction</option>
        </field>

        <field 
            name="jrkeywords"
            facet="jrkeywords_s_multi"
            type="JReviews.Keywords"
            label="Keywords"
            class="inputbox jsolrquery"
            multiple="true"
            size="8"
            maxlength="50" />

        <field 
            name="reluctant"
            facet="jrreluctantreader_s_multi"
            type="JSolr.Checkbox"
            label="Reluctant Reader"
            class="inputbox jsolrquery"
            checkedValue="Good-for-Reluctant-Readers"
            maxlength="50">
        </field>

        <field 
            name="jrpartofseries"
            facet="jrpartofseries_s_multi"
            type="JSolr.Checkbox"
            label="Part of a Series"
            class="inputbox jsolrquery"
            checkedValue="Part-of-a-Series"
            maxlength="50">
        </field>

        <field 
            name="country"
            facet="country"
            type="JSolr.Country"
            label="Country"
            class="inputbox jsolrquery"
            multiple="true"
            maxlength="50" />
    </fieldset>
</form>
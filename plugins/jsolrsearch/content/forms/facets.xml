<?xml version="1.0" encoding="utf-8"?>
<form>    
    <fieldset 
        name="metadata"
        label="COM_JSOLRSEARCH_ADVANCED_SEARCH_TITLE"
        addfieldpath="/administrator/components/com_jsolrsearch/models/fields">
        
        <!-- only JSolrFormFields should be used here -->
        <field 
            name="title_of_art"
            facet="title"
            type="JSolr.Text"
            label="Title"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>

        <field 
            name="created_at"
            facet="created"
            type="JSolr.DateRange"
            label="Creation date"
            size="40"
            class="inputbox jsolrquery"
            maxlength="50"/>
    </fieldset>
</form>
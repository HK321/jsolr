<?xml version="1.0" encoding="UTF-8"?>
<project name="JSolr JReviews Crawler Plugin" default="" basedir=".">
	<property name="dest.jreviews.plugins" value="${dest}/components/com_jreviews/jreviews/plugins"/>
	<property name="package.dest.jreviews.crawler" value="${package.dest}/plg_jreviews_jsolrcrawler.zip"/>
	
	<target name="update" description="Copies JReviews JSolr Index plugin to existing Joomla install.">
		<echo message="Deploying JReviews JSolr Index plugin to Joomla! environment."/>
		<copy todir="${dest.jreviews.plugins}">
			<fileset dir="${src}" defaultexcludes="true">
				<include name="jsolrcrawler.php"/>
			</fileset>
		</copy>
	</target>
	
	<target name="package" description="Creates a JReviews JSolr Index plugin package.">
		<echo message="Packaging JReviews JSolr Index plugin."/>
		<zip destfile="${package.dest.jreviews.crawler}"
		       basedir="${src}"
		       update="true"
		       excludes="build*.xml"/>
	</target>
</project>
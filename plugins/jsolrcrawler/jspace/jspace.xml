<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="jsolrcrawler" method="upgrade">
	<name>plg_jsolrcrawler_jspace</name>
	<creationDate>2012-08-15</creationDate>
	<author>Wijiti</author>
	<authorEmail>development@wijiti.com</authorEmail>
	<authorUrl>http://www.wijiti.com</authorUrl>
	<copyright>>Copyright (C) 2012 Wijiti Pty Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>0.3.0</version>
	<description>PLG_JSOLRCRAWLER_JSPACE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="jspace">jspace.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrcrawler_jspace.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jsolrcrawler_jspace.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="use_jspace_connection_params" 
					type="list"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_USEJSPACECONNECTIONPARAMS_DESC"
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_USEJSPACECONNECTIONPARAMS_LABEL"
					value="1"
					default="1">
					<option value="1">Component</option>
  					<option value="0">Plugin</option>
  				</field>
				<field 
					name="base_url" 
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_BASEURL_LABEL" 
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_BASEURL_DESC"
					size="45"/>
				<field 
					name="rest_url" 
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_URL_LABEL" 
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_URL_DESC"
					size="45"/>
				<field 
					name="username" 
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_USERNAME_LABEL" 
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_USERNAME_DESC"
					size="45"/>
				<field 
					name="password" 
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_PASSWORD_LABEL"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_PASSWORD_DESC" 
					size="45"/>
			</fieldset>

			<fieldset name="indexing" addfieldpath="/plugins/jsolrcrawler/jspace/form/fields">
				<field 
					name="facets" 
					type="jsolr.metadatafieldlist" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_FACETS_LABEL"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_FACETS_DESC" 
					multiple="true"
					size="5"
					class="inputbox"
					 />
				<field 
					name="sorts" 
					type="jsolr.metadatafieldlist" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_SORTS_LABEL"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_SORTS_DESC" 
					multiple="true"
					size="5"
					class="inputbox"
					/>
				<field 
					name="exclude_bundles_from_index"
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_EXCLUDE_BUNDLES_FROM_INDEX_LABEL"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_EXCLUDE_BUNDLES_FROM_INDEX_DESC"
					size="40" 
					class="inputbox"/>
				<field 
					name="exclude_bundle_content_from_index"
					type="text" 
					label="PLG_JSOLRCRAWLER_JSPACE_FIELD_EXCLUDE_BUNDLE_CONTENT_FROM_INDEX_LABEL"
					description="PLG_JSOLRCRAWLER_JSPACE_FIELD_EXCLUDE_BUNDLE_CONTENT_FROM_INDEX_DESC" 
					size="40"
					class="inputbox"/>				
			</fieldset>
		</fields>
	</config>
</extension>
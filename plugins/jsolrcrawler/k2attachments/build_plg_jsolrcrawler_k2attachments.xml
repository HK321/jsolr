<?xml version="1.0" encoding="UTF-8"?>
<project name="JSolrCrawler K2Attachments Plugin" default="" basedir=".">
	<property name="dest.plugins.crawlers" value="${dest.plugins}/jsolrcrawler"/>
	
	<target name="update" description="Copies JSolr Index K2Attachments plugin to existing Joomla install.">
		<echo message="Deploying JSolr Index K2Attachments plugin to Joomla! environment."/>
		<copy todir="${dest.plugins.crawlers}/k2attachments">
			<fileset dir="${src}" defaultexcludes="true">
				<include name="**"/>
				<exclude name="**/language/**"/>
			</fileset>
		</copy>
		<copy todir="${dest.administrator.languages}">
			<fileset dir="${src}/language" defaultexcludes="true">
				<include name="**/**"/>
			</fileset>
		</copy>
	</target>
	
	<target name="package" description="Creates a JSolr Index K2Attachments plugin package.">
		<echo message="Packaging JSolr Index K2attachments plugin."/>
		<zip destfile="${package.dest}/plg_jsolrcrawler_k2attachments.zip"
		       basedir="${src}"
		       update="true"
		       excludes="build*.xml"/>
	</target>
</project>